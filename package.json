{
  "name": "io-kurumim-ts-lib",
  "version": "1.0.0",
  "description": "A lightweight TypeScript utility library",
  "author": "Renato Raeffray <raeffray@gmail.com>",
  "license": "MIT",
  "keywords": ["typescript", "utility", "library"],

  "repository": {
    "type": "git",
    "url": "https://github.com/raeffray/io-kurumim-ts-lib.git"
  },
  
  "bugs": {
    "url": "https://github.com/raeffray/io-kurumim-ts-lib/issues"
  },

  "homepage": "https://github.com/raeffray/io-kurumim-ts-lib#readme",

  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist"],

  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },

  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsup",
    "lint": "eslint 'src/**/*.ts' --fix",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "npm run build"
  },

  "publishConfig": {
    "access": "public"
  },

  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "@types/node": "^22.13.4",
    "@vitest/coverage-v8": "^3.0.6",
    "eslint": "^9.20.1",
    "globals": "^15.15.0",
    "tsup": "^8.3.6",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1",
    "vitest": "^3.0.6"
  }
}
